<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= beer.name %></div>
    <form class="ui form" action="/beers/<%= beer._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Beer Name</label>
            <input type="text" name="beer[name]" value="<%= beer.name %>">
        </div>
        <div class="field">
            <label>Brewery Name</label>
            <input type="text" name="beer[brewery]" value="<%= beer.brewery %>">        
        </div>
        <div class="field">
            <label>Brewery Location</label>
            <input type="text" name="beer[location]" value="<%= beer.location %>">    
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="beer[image]" value="<%= beer.image %>">
        </div>
        <div class="field">
            <label>Beer Style</label>
            <input type="text" name="beer[style]" value="<%= beer.style %>">
        </div>
        <div class="field">
            <label>Beer Review</label>
            <textarea name="beer[review]"><%= beer.review %></textarea>
        </div>
        <div class="field">
            <label>Rating (Out of 10 - Whole Numbers Only)</label>
            <input name="beer[rating]" value="<%= beer.rating %>"></input>
        </div>
        <button class="ui blue inverted button" type="submit">Update Beer</button>
    </form>
</div>

<% include ./partials/footer.ejs %>