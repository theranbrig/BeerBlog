<% include ./partials/header.ejs %>
    <div class="ui main text container">
        <div class="ui huge header">
            <%= beer.name %>
            <h5><%= beer.style %></h5>
        </div>
        <div class="ui top attached segment">
            <div class="item">
                <div class="ui centered rounded image">
                    <img src="<%= beer.image %>"> 
                </div>
                <div class="description segment">
                    <h3><%= beer.brewery %></h3
                    <h4><%= beer.location %></h4>
                    <h5><%= beer.style %></h5>
                </div>
                <div class="content beerInfo">
                    <div class="ratings">
                        <p>
                            <% for (i = 0; i < 10; i++) { %>
                                    <% if (i < (beer.rating - 0.5)) { %>
                                    <i class="star icon"></i>
                                    <% } else { %>
                                    <i class="empty star icon"></i>
                                    <% } %>
                            <% } %>
                        </p>     
                    </div>
                    <p><%- beer.review %></p>
                </div>
            </div>
            <a class="ui orange inverted button"href="/beers/<%= beer._id %>/edit">Edit</a>
            <form action="/beers/<%= beer._id %>?_method=delete" id="delete" method="POST">
                <button class="ui red inverted button">Delete</button>
            </form>
        </div>
    </div>
<% include ./partials/footer.ejs %>